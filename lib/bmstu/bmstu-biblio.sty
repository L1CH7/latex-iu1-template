%% lib/bmstu/bmstu-biblio.sty
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bmstu-biblio}[2026/02/11 v2.1 BMSTU Bibliography Fixed Indents]

% 1. Настройка интервалов
\setlength{\bibitemsep}{0pt} % Убираем дополнительный отступ между источниками

% 2. Настройка геометрии списка
\defbibenvironment{bibliography}
  {\enumerate[
     label=\arabic*., % Номер с точкой
     leftmargin=0pt,  % Последующие строки прижаты к левому краю (0 см)
     itemindent=1.25cm, % Абзацный отступ первой строки (1,25 см)
     labelsep=0.33em,  % Пробел после точки номера
     itemsep=0pt,
     parsep=0pt
  ]}
  {\endenumerate}
  {\item}

% 3. Настройка заголовка для оглавления
\defbibheading{bibintoc}[\bibname]{%
    \chapter*{#1}%
    \addcontentsline{toc}{chapter}{#1}%
}

% 4. Команда для вывода библиографии
\newcommand{\makebibliography}
{
    \printbibliography[heading=bibintoc, title={СПИСОК ИСПОЛЬЗОВАННЫХ ИСТОЧНИКОВ}]
}