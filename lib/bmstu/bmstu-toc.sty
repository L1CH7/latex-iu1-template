\RequirePackage{titletoc}

% Создание содержания
\newcommand{\maketableofcontents}
{
	\renewcommand\contentsname{СОДЕРЖАНИЕ}
	% --- ИСПРАВЛЕНИЕ №5: Оглавление ---

	% Настройка точек: "1. Название ......... 5"
	\titlecontents{chapter}[0pt]
    {} % {\bfseries} % Если хотим жирные заголовки 1 
    {\thecontentslabel.\hspace{0.33em}} % Точка после номера + отступ 1 пробел
    {}
    {\titlerule*[0.5pc]{.}\thecontentspage}

	\titlecontents{section}[0pt] % Если хотим отступ, то можно сделать например 1.5em
    {}
    {\thecontentslabel.\hspace{0.33em}} 
    {}
    {\titlerule*[0.5pc]{.}\thecontentspage}

	\titlecontents{subsection}[0pt]
    {}
    {\thecontentslabel.\hspace{0.33em}} 
    {}
    {\titlerule*[0.5pc]{.}\thecontentspage}

	\tableofcontents
}