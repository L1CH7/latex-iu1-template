%% lib/bullets.sty
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bullets}[2026/02/08 v1.0 Custom Bullets]

\RequirePackage{enumitem}

% Настройка списков по ГОСТ
% wide=0pt — текст второй строки возвращается к левому краю
% labelindent=1.25cm — маркер визуально находится на уровне красной строки
\setlist{
    wide=0pt,
    labelindent=1.25cm,
    labelsep=0.33em,
    topsep=0pt,
    partopsep=0pt,
    parsep=0pt,
    itemsep=0pt
}

% Нумерованный список: 1)
\setlist[enumerate]{label=\arabic*)}

% Маркированный список: тире
\setlist[itemize]{label=--}